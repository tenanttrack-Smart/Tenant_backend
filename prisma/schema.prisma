// Prisma schema for Supabase Postgres
// Read DATABASE_URL from environment

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  phone      String?
  leaseStart DateTime?
  leaseEnd   DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Property {
  id        String       @id @default(uuid())
  name      String
  address   String
  type      PropertyType
  units     Int
  value     Int
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum PropertyType {
  Apartment
  Condo
  House
}
